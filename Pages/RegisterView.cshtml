@page
@model CSharpSnackisApp.Pages.RegisterViewModel
@{
}
        <div class="sidenav">
            <div class="login-main-text">
                <h2 class="text-white text-center">Medlemsregistrering<br></h2>
                <p class="text-white text-center">Registrera dig här!</p>
            </div>
        </div>
<div class="main">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }
    else
    {
        <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <form method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Användarnamn</label>
                        <input asp-for="User.Username" class="form-control" />
                        <span asp-validation-for="User.Username" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.MessageUserName))
                        {
                            <p class="text-danger">@Model.MessageUserName</p>
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Email" class="control-label"></label>
                        <input asp-for="User.Email" class="form-control" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.MessageMail))
                        {
                            <p class="text-danger">@Model.MessageMail</p>
                        }
                    </div>
                    <div class="form-group">
                        <label class="control-label">Lösenord</label>
                        <input asp-for="User.Password" type="password" class="form-control" pattern=".{8,}" required title="Minst 8 tecken" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Land</label>
                        <input asp-for="User.Country" class="form-control" />
                        <span asp-validation-for="User.Country" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="form-group">
                            <input style="width : 200px" type="submit" value="Registrera" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</div>