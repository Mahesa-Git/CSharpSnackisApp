@page
@model CSharpSnackisApp.Pages.LogInViewModel
@{
}
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-5">
                    <div class="card-img-left d-none d-md-flex">
                        <!-- Background image for card set in CSS! -->
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">Logga in</h5>
                        <form method="post" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Användarnamn</label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                                @if (!string.IsNullOrEmpty(Model.Message))
                                {
                                    <p class="text-danger">@Model.Message</p>
                                }
                            </div>
                            <div class="form-group">
                                <label class="control-label">Lösenord</label>
                                <input asp-for="Password" type="password" class="form-control" pattern=".{8,}" required title="Minst 8 tecken" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="form-group">
                                    <input style="width : 200px" type="submit" value="Logga in" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>