@page
@model IndexModel
@{
    ViewData["Title"] = "Startsida - Kategorier";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">

                <div class="ibox-content m-b-sm border-bottom">
                    <div class="p-xs">
                        <div class="pull-left m-r-md">
                            <i class="fa fa-globe text-navy mid-icon"></i>
                        </div>
                        <h2>C#-Snackis - Rätt plats för diskussioner om programmering</h2>
                        <span>Välj en kategori</span>
                    </div>
                </div>
                <div class="ibox-content forum-container">
                    <div class="forum-title">
                        <div class="pull-right forum-desc">
                            <small>Total posts: ett gäng (ska vara dynamiskt sen)</small>
                            
                        </div>
                        <h3>Kategorier</h3>
                    </div>
                    @if (Model.Message is not null)
                    {
                        <p>@Model.Message</p>
                    }
                    else
                    {
                        @foreach (var subject in Model._categoryResponseModel)
                        {
                            <div class="forum-item active">
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="forum-icon">
                                            <i class="fa fa-shield"></i>
                                        </div>
                                        <a asp-page="/TopicView" asp-route-categoryID="@subject.categoryID" class="forum-item-title">@subject.title</a>
                                        <div class="forum-sub-title">@subject.description</div>

                                        <form asp-page-handler="DeleteCategory">
                                            <div class="form-group" style="visibility: hidden">
                                                <input asp-for="CategoryID" class="form-control" value="@subject.categoryID" />
                                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                                            </div>
                                            <button class="btn btn-danger" type="submit">Radera</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
